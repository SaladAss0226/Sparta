<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp.SignUpActivity"
    android:background="@color/mainBackground">


    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_welcome_img"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="選擇角色"
        app:layout_constraintStart_toStartOf="@id/radioGroup"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"/>

    <RadioGroup android:id="@+id/radioGroup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_role"
        app:layout_constraintStart_toStartOf="@+id/et_name"

        >

    <RadioButton android:id="@+id/rb_soldier"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="傭兵"
        android:textColor="@color/white"
        />
    <RadioButton android:id="@+id/rb_normal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="村民"
        android:textColor="@color/white"/>
    </RadioGroup>





    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:hint="Full Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20dp"

        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Account"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20dp"


        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20dp"


        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_account" />
    <EditText
        android:id="@+id/et_bank_account"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Bank Account"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20dp"


        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_button"
        android:textColor="@color/buttonText"
        android:text="Get started"
        android:textSize="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_bank_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>